{
  "manifest_version": 2,

  "name": "Mindfulness at work",
  "description": "This extension prompts the user with a mindfulness quote every 60 minutes.",
  "version": "1.0",

  "permissions": [
    "activeTab",
  	"<all_urls>",
	"notifications",
	"alarms"
  ],
  "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": false,
        "js":      ["content.js"],
		"css": ["content.css"]
    }],
	"background": {
		"scripts": ["eventPage.js"]
    }
}